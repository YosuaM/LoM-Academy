---
import { mountLevels } from "@Content/game_data_en/Mounts.astro";
---

<div>
  <!-- Title -->
  <h3
    class="text-gray-500 dark:text-gray-400 text-l sm:text-xl md:text-2xl lg:text-[24px] font-bold mb-2 md:mb-3 lg:mb-6 xl:mb-8"
  >
    Mount Tier Details
  </h3>
  <!-- Title -->
  
  <!-- Mount Levels Table -->
  <table
    id="mount-tier-detail-table"
    class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
  >
    <!-- Header -->
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="px-4 py-3 text-center"> Star </th>
        <th scope="col" class="px-4 py-3 text-center"> Count Clock Winder </th>
        <th scope="col" class="px-4 py-3 text-center"> Total Clock Winder </th>
        <th scope="col" class="px-4 py-3 text-center"> Bonuses </th>
      </tr>
    </thead>
    <!-- Header -->

    <!-- Body -->
    <tbody id="mount-tier-detail-table-body">
      {
        mountLevels[0]?.stars?.map((level, index) => {
          return (
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="text-center px-4 py-2">{level.star}</td>
              <td class="text-center px-4 py-2">{level.count}</td>
              <td class="text-center px-4 py-2">{level.total}</td>
              <td class="text-center px-4 py-2">{level.bonuses}%</td>
            </tr>
          );
        })
      }
    </tbody>
    <!-- Body -->
  </table>
  <!-- Mount Levels Table -->

  <!-- Mount Info -->
  <div class="grid grid-cols-12 gap-x-5 gap-y-9 md:gap-x-6 lg:gap-x-7.5 pt-10">
    <div class="col-span-full pt-2 md:col-span-4 md:justify-self-center">
      <img
        class=""
        id="mount-tier-detail-img"
        src={mountLevels[0]?.image}
        alt={mountLevels[0]?.name}
      />
    </div>
    <div class="col-span-full md:col-span-8">
      <div
        class="text-sm font-bold uppercase text-accent"
        id="mount-tier-detail-name"
      >
        {mountLevels[0]?.name}
      </div>
      <div>
        Tier:
        <span id="mount-tier-detail-tier">{mountLevels[0]?.tier}</span>
      </div>
      <div>
        Evasion:
        <span id="mount-tier-detail-evasion">{mountLevels[0]?.evasion}</span>%
      </div>
    </div>
  </div>
  <!-- Mount Info -->
</div>
