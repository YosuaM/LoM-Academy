---
import { advanceMounts } from "@Content/game_data_en/Mounts.astro";
import { morphs } from "@Content/game_data_en/Artifacts.astro";

const { type } = Astro.props;

const items = type === "mount" ? advanceMounts : type === 'artifact' ? morphs : [];
---

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">

  <!-- Mount Levels Table -->
  <table
    class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
    id="mount-tiers-table"
  >
    <!-- Header -->
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="px-6 py-3 text-center"> Name </th>
        <th scope="col" class="px-6 py-3 text-center"> image </th>
        <th scope="col" class="px-6 py-3 text-center"> Icon </th>
        <th scope="col" class="px-6 py-3 text-center"> Skills </th>
        <th scope="col" class="px-6 py-3 text-center"> Effects </th>
        <th scope="col" class="px-6 py-3 text-center"> How to obtain </th>
      </tr>
    </thead>
    <!-- Header -->
    <!-- Body -->
    <tbody>
      {
        items.map((item) => {
          return (
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="text-center px-6 py-2">{item.name}</td>
                <td class="text-center px-6 py-2">
                    <img
                    src={item.image}
                    alt={item.name}
                    class="w-30"
                    />
                </td>
                <td class="text-center px-6 py-2">
                    <img
                    src={item.icon}
                    alt={item.name}
                    class="w-18 h-18"
                    />
                </td>
                <td class="text-center px-6 py-2">{item.skill}</td>
                <td class="text-center px-6 py-2">{item.effect}</td>
                <td class="text-center px-6 py-2">{item.howToGet}</td>
            </tr>
          );
        })
      }
    </tbody>
    <!-- Body -->
  </table>
  <!-- Mount Levels Table -->
</div>
