    image: '/assets/img/events/rush/soul_rush_360_150.webp',
    link: '/events/rush-events/soul-rush'
  },
  {
    name: 'Pal Rush Event',
    description: 'Spend 2,000 Skill Lottery Tickets to get 10,000 Relic Fragments. This event can be completed up to 4 times.',
    week: 'Third week of the rush calendar',
