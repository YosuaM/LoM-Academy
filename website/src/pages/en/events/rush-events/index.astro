    link: '/events/rush-events/family-prayer-rush'
  },
  {
    name: 'Tech Rush Event',
    description: 'Spend 120,000 Ores to get 2,000 Divine Hammmer. This event can be completed up to 4 times.',
    week: 'Second week of the rush calendar',
    duration: '7 days',
    image: '/assets/img/events/rush/tech_rush_360_150.webp',
    link: '/events/rush-events/tech-rush'
  },
  {
    name: 'Mount Rush Event',
    description: 'Spend 800 Clockworks to get 2,000 Divine Hammmer. This event can be completed up to 4 times.',
    week: 'Second week of the rush calendar',
