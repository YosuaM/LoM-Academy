---
import StandarLayout from "@Layouts/StandarLayout.astro";
import ArticleBox from "@Components/en/news/ArticleBox.astro";
---

<StandarLayout title="Home">
  <div class="page-heading py-6 md:py-12">
    <div class="container">
      <div class="mb-2 flex items-baseline gap-x-3 lg:gap-x-4.5">
        <svg
          role="img"
          class="aspect-[6/9] w-3 fill-accent sm:w-4 md:w-5 lg:w-7 xl:w-9"
        >
          <use xlink:href="/assets/img/str1/sprite.svg#arrow-right-pixel"></use>
        </svg>
        <h1
          class="relative mb-3 text-3xl font-bold leading-none tracking-tighter text-gray-900 dark:text-white sm:text-4xl md:text-5xl lg:text-7xl xl:text-[84px]"
        >
          News
        </h1>
      </div>

      <ol
        class="relative flex flex-wrap gap-x-6 text-sm leading-none text-gray-500 lg:gap-x-8 lg:text-lg [&>li>a]:text-gray-900 hover:[&>li>a]:text-accent dark:[&>li>a]:text-white dark:hover:[&>li>a]:text-accent [&>li]:relative"
      >
        <li class="font-bold">
          <a href="/en/">Home</a>
          <svg
            role="img"
            class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5"
          >
            <use xlink:href="/assets/img/str1/sprite.svg#arrow-right-pixel-alt"
            ></use>
          </svg>
        </li>
        <li>News</li>
      </ol>
    </div>
  </div>

  <main id="main-content" class="grow lg:pt-0">
    <div class="pt-10 pb-16 lg:pt-20 lg:pb-44">
      <div class="container">
        <!-- CONTAINER -->
        <div class="grid grid-cols-12 gap-y-8 sm:gap-7.5">
          <!--Reversal Showdown event -->
          <ArticleBox
            date="April 12th, 2024"
            title="The Gold Bar Theft Mystery Challenge Event"
            desc="New event in Legend of Mushroom available. Find everything you need to know about The Gold Bar Theft Mystery Challenge Event!"
            img="/assets/img/news/gold-bar-theft-event/card.webp"
            alt="The Gold Bar Theft Event"
            link="/en/news/gold-bar-theft-event"
          />
          <!--Reversal Showdown event -->
          <!--Reversal Showdown event -->
          <ArticleBox
            date="April 08th, 2024"
            title="Reversal Showdown Event"
            desc="New event in Legend of Mushroom available. Find everything you need to know about the Reversal Showdown Event!"
            img="/assets/img/news/reversal-showdown-event/card.webp"
            alt="Reversal Showdown Event"
            link="/en/news/reversal-showdown-event"
          />
          <!--Reversal Showdown event -->
          <!--Oficial launch -->
<!--
          <ArticleBox
            date="April 07th, 2024"
            title="LoM Academy oficial launch!"
            desc="We are proud to announce the official launch of the League of Legends Academy! Join us and become a pro mushroom!"
            img="/assets/img/news/lom-academy-launch/card.webp"
            alt="LoM Academy oficial launch!"
            link="/en/news/lom-academy-launch"
          />
-->
          <!--Oficial launch -->
        </div>
        <!-- CONTAINER -->

        <!-- PAGINATION -->
        <nav class="pt-10 md:pt-14 lg:pt-24">
          <ul
            class="flex flex-wrap items-center justify-center gap-x-1.5 md:gap-x-2 lg:gap-x-4"
          >
            <li class="flex items-center">
              <a
                class="inline-flex justify-center items-center border border-gray-200 dark:border-gray-600 w-8 lg:w-12.5 aspect-square text-gray-900 dark:text-white hover:bg-accent hover:border-accent dark:hover:border-accent transition-colors hover:text-gray-900 dark:hover:text-gray-900 pointer-events-none"
                href="#"
              >
                <svg
                  class="w-1.5 h-2.5 rotate-180 opacity-40"
                  fill="currentColor"
                >
                  <use
                    xlink:href="/assets/img/str1/sprite.svg#arrow-right-pixel-alt"
                  ></use>
                </svg>
              </a>
            </li>
            <li>
              <a
                class="inline-flex justify-center items-center w-8 lg:w-12.5 aspect-square border font-bold transition-colors text-gray-900 bg-accent border-accent dark:border-accent"
                href="#">1</a
              >
            </li>
            <li class="flex items-center">
              <a
                class="inline-flex justify-center items-center border border-gray-200 dark:border-gray-600 w-8 lg:w-12.5 aspect-square text-gray-900 dark:text-white hover:bg-accent hover:border-accent dark:hover:border-accent transition-colors hover:text-gray-900 dark:hover:text-gray-900"
                href="#"
              >
                <svg class="w-1.5 h-2.5" fill="currentColor">
                  <use
                    xlink:href="/assets/img/str1/sprite.svg#arrow-right-pixel-alt"
                  ></use>
                </svg>
              </a>
            </li>
          </ul>
        </nav>
        <!-- PAGINATION -->
      </div>
    </div>
  </main>
</StandarLayout>
