---

<StandarLayout title="Daily Checklist" page={6} >
  <!-- HEADER -->
  <div class="page-heading py-2 md:py-4">
    <div class="container">
      <div class="mb-2 flex items-baseline gap-x-3 lg:gap-x-4.5">
        <svg
          role="img"
          class="aspect-[6/9] w-3 fill-accent sm:w-4 md:w-5 lg:w-7 xl:w-9"
        >
          <use xlink:href="/assets/img/str1/sprite.svg#arrow-right-pixel"></use>
        </svg>
        <h1
          class="relative mb-3 text-3xl font-bold leading-none tracking-tighter text-gray-900 dark:text-white sm:text-4xl md:text-5xl lg:text-7xl xl:text-[84px]"
        >
          Daily Checklist
        </h1>
      </div>

      <ol
        class="relative flex flex-wrap gap-x-6 text-sm leading-none text-gray-500 lg:gap-x-8 lg:text-lg [&>li>a]:text-gray-900 hover:[&>li>a]:text-accent dark:[&>li>a]:text-white dark:hover:[&>li>a]:text-accent [&>li]:relative"
      >
        <li class="font-bold">
          <!-- SECTION -->
          <a href="/en/tools" }> Tools </a>
          <!-- SECTION -->
          <!-- TITLE -->
          <svg
            role="img"
            class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5"
          >
            <use xlink:href="/assets/img/str1/sprite.svg#arrow-right-pixel-alt"
            ></use>
          </svg>
        </li>
        <li>Daily Checklist</li>
        <!-- TITLE -->
      </ol>
    </div>
  </div>
  <!-- HEADER -->

  <main id="main-content" class="grow lg:pt-0">
    <div class="pt-10 pb-16 lg:pt-20 lg:pb-44">
      <div class="container">
        <div class="grid grid-cols-2 gap-7.5 mb-9 lg:mb-14 xl:pr-12.5">
          <!-- LEFT PANEL -->
          <div class="basis-1/2">
            <div class="max-w-screen-xl mx-auto px-5 min-h-sceen">
              <div
                class="grid max-w-xl mx-auto mt-8"
              >
                <!-- Daily Claims -->
                <div class="py-5">
                  <details class="group">
                    <summary
                      class="flex justify-between items-center font-medium cursor-pointer list-none"
                    >
                      <h4
                        class="text-gray-900 dark:text-white text-xl sm:text-2xl md:text-3xl lg:text-[32px] font-bold"
                      >
                        Daily Claims
                      </h4>
                      <div class="flex justify-between items-center">
                        <span class="pr-2">0 of {daily_claims.length}</span>
                        <span class="transition group-open:rotate-180">
                          <svg
                            fill="none"
                            height="24"
                            shape-rendering="geometricPrecision"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            viewBox="0 0 24 24"
                            width="24"
                            ><path d="M6 9l6 6 6-6"></path>
                          </svg>
                        </span>
                      </div>
                    </summary>
                    <div
                      class="flex flex-col w-full border shadow-lg overflow-hidden m-auto p-4"
                    >
                      {
                        daily_claims.map((item) => (
                          <label
                            class="flex items-center gap-x-3 hover:cursor-pointer"
                            for={item.id}
                          >
                            <input
                              name={item.id}
                              id={item.id}
                              type="checkbox"
                              class="border-gray-650 dark:border-gray-650 h-4 w-4 bg-white checked:border-accent checked:bg-white checked:text-accent checked:hover:border-accent checked:hover:bg-white dark:bg-gray-900 dark:checked:border-accent dark:checked:hover:border-accent dark:checked:hover:bg-gray-900"
                            />
                            <span>{item.name}</span>
                          </label>
                        ))
                      }
                    </div>
                  </details>
                </div>
                <!-- Daily Claims -->
                <!-- Gift Section -->
                <div class="py-5">
                  <details class="group">
                    <summary
                      class="flex justify-between items-center font-medium cursor-pointer list-none"
                    >
                      <h4
                        class="text-gray-900 dark:text-white text-xl sm:text-2xl md:text-3xl lg:text-[32px] font-bold"
                      >
                        Gifts
                      </h4>

                      <div class="flex justify-between items-center">
                        <span class="pr-2">0 of {gifts_section.length}</span>
                        <span class="transition group-open:rotate-180">
                          <svg
                            fill="none"
                            height="24"
                            shape-rendering="geometricPrecision"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            viewBox="0 0 24 24"
                            width="24"
                            ><path d="M6 9l6 6 6-6"></path>
                          </svg>
                        </span>
                      </div>
                    </summary>
                    <div
                      class="flex flex-col w-full border shadow-lg overflow-hidden m-auto p-4"
                    >
                      {
                        gifts_section.map((item) => (
                          <label
                            class="flex items-center gap-x-3 hover:cursor-pointer"
                            for={item.id}
                          >
                            <input
                              name={item.id}
                              id={item.id}
                              type="checkbox"
                              class="border-gray-650 dark:border-gray-650 h-4 w-4 bg-white checked:border-accent checked:bg-white checked:text-accent checked:hover:border-accent checked:hover:bg-white dark:bg-gray-900 dark:checked:border-accent dark:checked:hover:border-accent dark:checked:hover:bg-gray-900"
                            />
                            <span>{item.name}</span>
                          </label>
                        ))
                      }
                    </div>
                  </details>
                </div>
                <!-- Gift Section -->
              </div>
            </div>
          </div>
          <!-- LEFT PANEL -->
          <!-- RIGHT PANEL -->
          <div class="basis-1/2">
            <div class="max-w-screen-xl mx-auto px-5 min-h-sceen">
              <div
                class="grid max-w-xl mx-auto mt-8"
              >
                <!-- Dungeons -->
                <div class="py-5">
                  <details class="group">
                    <summary
                      class="flex justify-between items-center font-medium cursor-pointer list-none"
                    >
                      <h4
                        class="text-gray-900 dark:text-white text-xl sm:text-2xl md:text-3xl lg:text-[32px] font-bold"
